@model Task.Models.classEnrolment

@{
    ViewBag.Title = "ClassEnrolment";
}

<h2>Class Enrolment</h2>
<div class="alert alert-danger">
    <p>You Make Something Correct,</p>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @{
            List<SelectListItem> st = ViewBag.Students;
        }
        <div class="form-group">
            @Html.LabelFor(model => model.stId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.stId, st, "---Select---", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.stId, "", new { @class = "text-danger" })
            </div>
        </div>

        @{
            List<SelectListItem> cla = ViewBag.Classes;
        }

        <div class="form-group">
            @Html.LabelFor(model => model.classId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.classId, cla, "---Select---", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.classId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
